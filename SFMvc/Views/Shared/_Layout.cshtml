<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous"/>  
    <link href="~/StyleSheets/Styles.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <nav>

        <a asp-controller="Home" asp-action="Index">Stream-Team</a>
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="Home" asp-action="Logout">Sign out</a>
            <p>Logged in user: @User.Identity.Name</p>
            <a asp-controller="Home" asp-action="Personal">My page</a>
        }
        else
        {
            <a asp-controller="Home" asp-action="Login">Login</a>
            <a asp-controller="Home" asp-action="Register">Register</a>
        }

        
    </nav>
    <div>
        @RenderBody()
    </div>
    @RenderSection("scripts", false)
</body>
</html>
